# LTI key used to sign cookies and tokens
LTI_KEY=LTIKEY

# MongoDB
MONGODB_URL=mongodb://localhost/database
MONGODB_USER=user
MONGODB_PASSWORD=password

# Server
PORT=3000

# Cookies (set COOKIES_SECURE=true and COOKIES_SAME_SITE=None for cross-domain https)
COOKIES_SECURE=false
COOKIES_SAME_SITE=

# Platform registration (for Moodle: use the exact "Platform identifier" from Site admin → Plugins → LTI → Manage external tool types → your tool)
PLATFORM_URL=https://moodle.matheusfelipe.dev
PLATFORM_NAME=Moodle
PLATFORM_CLIENT_ID=your_client_id_from_moodle